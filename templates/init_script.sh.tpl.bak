mkdir ~/chainlink
echo $CONFIG | base64 -d > ~/chainlink/config.toml
echo $SECRETS | base64 -d > ~/chainlink/secrets.toml
[ \"$TLS_UI_ENABLED\" = \"true\" ] && echo \"[INFO] TLS is enabled on Chainlink Node. Importing...\" || echo \"[INFO] TLS is not enabled on Chainlink Node\"
[ \"$TLS_UI_ENABLED\" = \"true\" ] && echo $TLS_CERT | base64 -d > /home/chainlink/chainlink/server.crt && export TLS_CERT_PATH=~/chainlink/server.crt || true
[ \"$TLS_UI_ENABLED\" = \"true\" ] && echo $TLS_KEY | base64 -d > /home/chainlink/chainlink/server.key && export TLS_KEY_PATH=~/chainlink/server.key || true
[ ! -z \"$TLS_CERT_PATH\" ] && [ ! -z \"$TLS_KEY_PATH\" ] && echo \"[INFO] TLS certificate and server key imported\" || echo \"[INFO] Skip TLS certificate and server key import\"
chainlink --config ~/chainlink/config.toml --secrets ~/chainlink/secrets.toml local node